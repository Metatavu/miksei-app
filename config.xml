<?xml version='1.0' encoding='utf-8'?>
<widget id="fi.metatavu.mikseikysely" version="0.0.2" windows-packageVersion="1.1.4.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Miksei Mikkeli</name>
    <description>
        Mobile application for Miksei Mikkeli
    </description>
    <author email="devs@metatavu.fi" href="https://www.metatavu.fi">
        Metatavu Oy
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <allow-intent href="about:*" />
        <allow-navigation href="*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-device" spec="^1.1.7" />
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.2" />
    <plugin name="cordova-sqlite-storage" spec="^2.1.1" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.2" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="blackopaque" />
    <engine name="browser" spec="^5.0.3" />
    <engine name="windows" spec="4.4.2" />
    <engine name="android" spec="^6.4.0" />
    <engine name="ios" spec="^4.5.4" />
</widget>
